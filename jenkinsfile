pipeline{
        agent any
              environment{
                        notifyEmail = "mdmasumalam0413@gmail.com"
                          }
        tools{
              Maven "maven_home"
              }
        triggers{
                cron('0 06 * * *')
                }
          stages{
                stage("code checkout") {
                  steps{
                        bat "echo hello"
                        }
                                        }
                stage ("code build") {
                    steps{
                          bat "mvn clean"
                          }
                                      }
                stage("unit test") {
                    steps {
                          bat "mvn test"
                            }
                                      }
                  }
      post {
          success{ 
                bat"echo sucess"
                  }
            }
}
